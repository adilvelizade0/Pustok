@model Product

<div class="container">
    <div class="row">
         <div class="col-12 grid-margin stretch-card">
                      <div class="card">
                        <div class="card-body">
                          <form method="post" class="forms-sample">
                            <div class="form-group">
                              <label for="exampleInputUsername1">Name</label>
                              <input value="@Model.Name" name="productName" type="text" class="form-control" id="exampleInputUsername1" placeholder="name">
                            </div>
                            <div class="form-group">
                              <label >Cost Price</label>
                              <input value="@Model.CostPrice" name="productCostPrice" type="number" class="form-control"  placeholder="cost price">
                            </div>
                            <div class="form-group">
                              <label >Sale Price</label>
                              <input value="@Model.SalePrice" name="productSalePrice" type="number" class="form-control"  placeholder="sale price">
                            </div>
                            <div class="form-group">
                              <label >Discount Price</label>
                              <input value="@Model.DiscountPrice" name="productDiscountPrice" type="number" class="form-control"  placeholder="discount price">
                            </div>
                            
                            <button type="submit" class="btn btn-primary mr-2">Submit</button>
                            <a class="btn btn-light" asp-area="Admin" asp-controller="ProductSlider" asp-action="Details" asp-route-id="@Model.Id">Cancel</a>
                          </form>
                        </div>
                      </div>
                    </div>
    </div>
</div>