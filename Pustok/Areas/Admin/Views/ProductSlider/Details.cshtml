@model Product
<div class="container">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Category Table</h4>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Name
                                </th>
                                <th>
                                    Author
                                </th>
                                
                                <th>
                                    Cost Price
                                </th>
                                <th>
                                    Sale Price
                                </th>
                                <th>
                                    Discount Price
                                </th>
                               
                                <th>
                                    Featured
                                </th>
                                <th>
                                    New
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                           
                                <tr>
                                    <td>
                                        @Model.Id
                                    </td>
                                    <td>
                                        @Model.Name
                                    </td>
                                    <td>
                                        @Model.Author.Fullname
                                    </td>
                                  
                                    <td>
                                        @Model.CostPrice
                                    </td>
                                    <td>
                                        @Model.SalePrice
                                    </td>
                                    <td>
                                        @Model.DiscountPrice
                                    </td>
                                    
                                    <td>
                                        @Model.IsFeatured
                                    </td>
                                    <td>
                                        @Model.IsNew
                                    </td>
                                    
                                    <td class="d-flex flex-column">
                                        <a class="btn btn-warning my-2 " asp-action="Details" asp-controller="ProductSlider" >Update</a>
                                        <a  class="btn btn-danger my-2" asp-action="Details" asp-controller="ProductSlider" >Delete</a>
                                    </td>
                                </tr>
                            
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>