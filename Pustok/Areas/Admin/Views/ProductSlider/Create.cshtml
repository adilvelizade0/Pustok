@model Product

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <form method="post"  class="forms-sample">
                        <div class="form-group">
                            <label asp-for="@Model.Name" >Name</label>
                            <input asp-for="@Model.Name"  name="productName" class="form-control" placeholder="name">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.CostPrice"  >Cost Price</label>
                            <input  name="productCostPrice" asp-for="@Model.CostPrice"  class="form-control"  placeholder="cost price">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.SalePrice"  >Sale Price</label>
                            <input  name="productSalePrice" asp-for="@Model.SalePrice"  class="form-control"  placeholder="sale price">
                        </div>
                        <div class="form-group">
                            <label asp-for="@Model.DiscountPrice" >Discount Price</label>
                            <input name="productDiscountPrice" asp-for="@Model.DiscountPrice"  class="form-control"  placeholder="discount price">
                        </div>
                            
                        <button type="submit" class="btn btn-primary mr-2">Submit</button>
                        <a class="btn btn-light" asp-area="Admin" asp-controller="ProductSlider" asp-action="Index">Cancel</a>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>