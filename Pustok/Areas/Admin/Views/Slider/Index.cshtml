@model List<Slider>


<div class="container">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-between">
                        <h4 class="card-title">Category Table</h4>
                        <a asp-area="Admin" asp-controller="Slider" asp-action="Create" class="btn btn-success">Create</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title 1
                                </th>
                                
                                <th>
                                   Title 2
                                </th>
                                <th>
                                   Description
                                </th>
                                <th>
                                    Redirect Text
                                </th>
                                <th>
                                    Redirect Url
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                            </thead>
                            <tbody>

                            @foreach (var slider in Model)
                            {
                                <tr>
                                    <td>
                                        @slider.Id
                                    </td>
                                    <td>
                                        <img src="~/assets/image/bg-images/@slider.ImageUrl" alt="">
                                    </td>
                                    <td>
                                        @slider.Title1
                                    </td>
                                    <td>
                                        @slider.Title2
                                    </td>
                                  
                                    <td>
                                        @slider.Description
                                    </td>
                                    
                                    <td>
                                        @slider.RedirectText
                                    </td>
                                    
                                    <td>
                                        @slider.RedirectUrl
                                    </td>
                                    <td class="d-flex flex-column">
                                        <a  class="btn btn-primary my-2" asp-area="Admin" asp-controller="Slider" asp-action="Details" asp-route-id="@slider.Id" >Details</a>
                                        <a class="btn btn-warning my-2" asp-area="Admin" asp-controller="Slider" asp-action="Update" asp-route-id="@slider.Id">Update</a>
                                        <a  class="btn btn-danger my-2" asp-area="Admin" asp-controller="Slider" asp-action="Details" asp-route-id="@slider.Id" >Delete</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>