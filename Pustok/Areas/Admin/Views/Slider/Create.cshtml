@model Slider

 <div class="container">
     <div class="row">
         <div class="col-12 grid-margin stretch-card">
             <div class="card">
                 <div class="card-body">
                     <form method="post" class="forms-sample">
                         <div class="form-group">
                             <label for="exampleInputUsername1">Title 1</label>
                             <input asp-for="@Model.Title1"  name="title1" class="form-control" id="exampleInputUsername1" placeholder="title 2">
                         </div>
                         <div class="form-group">
                             <label >Title 2</label>
                             <input  name="title2" asp-for="@Model.Title2" class="form-control"  placeholder="title 2">
                         </div>
                         <div class="form-group">
                             <label >Description</label>
                             <input  name="description" asp-for="@Model.Description" class="form-control"  placeholder="description">
                         </div>
                         <div class="form-group">
                             <label >Image Url</label>
                             <input name="imageUrl" asp-for="@Model.ImageUrl" class="form-control"  placeholder="image url">
                         </div>
                         <div class="form-group">
                             <label >Redirect Text</label>
                             <input  name="redirectText" asp-for="@Model.RedirectText" class="form-control"  placeholder="redirect text">
                         </div>
                         <div class="form-group">
                             <label >Redirect Url</label>
                             <input  name="redirectUrl" asp-for="@Model.RedirectUrl" class="form-control"  placeholder="redirect url">
                         </div>
                         <button type="submit" class="btn btn-primary mr-2">Submit</button>
                         <a class="btn btn-light" asp-area="Admin" asp-controller="Slider" asp-action="Index">Cancel</a>
                     </form>
                 </div>
             </div>
         </div>
     </div>
 </div>

