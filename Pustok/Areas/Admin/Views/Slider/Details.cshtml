@model Slider

<div class="container">

    <div class="row">
        <div class="col-lg-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="row justify-content-between">
                        <h4 class="card-title">Category Table</h4>
                        <a asp-area="Admin" asp-controller="ProductSlider" asp-action="Create" class="btn btn-success">Create</a>
                        
                    </div>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                            <tr>
                                <th>
                                    Id
                                </th>
                                <th>
                                    Image
                                </th>
                                <th>
                                    Title 1
                                </th>
                                
                                <th>
                                   Title 2
                                </th>
                                <th>
                                   Description
                                </th>
                                <th>
                                    Redirect Text
                                </th>
                                <th>
                                    Redirect Url
                                </th>
                                <th>
                                    Settings
                                </th>
                            </tr>
                            </thead>
                            <tbody>
                            <tr>
                                    <td>
                                        @Model.Id
                                    </td>
                                    <td>
                                        <img src="~/assets/image/bg-images/@Model.ImageUrl" alt="">
                                    </td>
                                    <td>
                                        @Model.Title1
                                    </td>
                                    <td>
                                        @Model.Title2
                                    </td>
                                  
                                    <td>
                                        @Model.Description
                                    </td>
                                    
                                    <td>
                                        @Model.RedirectText
                                    </td>
                                    
                                    <td>
                                        @Model.RedirectUrl
                                    </td>
                                    <td class="d-flex flex-column">
                                        <a class="btn btn-warning my-2 ">Update</a>
                                        <form method="post">
                                            <button  class="btn btn-danger my-2" asp-controller="Slider" asp-route-id="@Model.Id">Delete</button>
                                        </form>
                                    </td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>