@model List<Promotion>

<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <div class="d-flex justify-content-between align-items-center">
                        <h4 class="card-title">Basic Table</h4>
                        <a class="btn btn-success" asp-area="Admin" asp-controller="Promotion" asp-action="Create">Create</a>
                    </div>
                    <div class="table-responsive">
                        <table class="table">
                            <thead>
                            <tr>
                                <th>Id</th>
                                <th>Image Url</th>
                                <th>Redirect Url</th>
                                
                            </tr>
                            </thead>
                            <tbody>
                            @foreach (var promotion in @Model)
                            {
                                <tr>
                                    <td>@promotion.Id</td>
                                    <td>
                                        @promotion.ImgUrl
                                    </td>
                                    <td>@promotion.RedirectUrl</td>
                                    <td>
                                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Promotion" asp-action="Details" asp-route-id="@promotion.Id">Details</a>
                                        <a class="btn btn-warning" asp-area="Admin" asp-controller="Promotion" asp-action="Update" asp-route-id="@promotion.Id">Update</a>
                                        <a class="btn btn-danger" asp-area="Admin" asp-controller="Promotion" asp-action="Details" asp-route-id="@promotion.Id">Delete</a>
                                    </td>
                                </tr>
                            }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>