@model Promotion
<div class="container">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Default form</h4>
                    <form method="post" asp-route-id="@Model.Id" class="forms-sample">
                        <div class="form-group">
                            <label for="exampleInputUsername1">Title</label>
                            <input value="@Model.ImgUrl" name="imgUrl" type="text" class="form-control" id="exampleInputUsername1" placeholder="Title">
                        </div>
                        <div class="form-group">
                            <label for="exampleInputEmail1">Subtitle</label>
                            <input value="@Model.RedirectUrl" name="redirectUrl"  type="text" class="form-control" id="exampleInputEmail1" placeholder="Subtitle">
                        </div>
                        <button  type="submit" class="btn btn-primary mr-2">Submit</button>
                        <button class="btn btn-light">Cancel</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>